{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docs: Setup venv (.venv)",
      "type": "shell",
      "command": "python3",
      "args": [
        "-m",
        "venv",
        ".venv",
        "&&",
        "./.venv/bin/python",
        "-m",
        "pip",
        "install",
        "-r",
        "requirements-docs.txt"
      ],
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Serve (RAG2F)",
      "type": "shell",
      "command": "./.venv/bin/python",
      "args": ["-m", "mkdocs", "serve", "-f", "mkdocs.yml", "-a", "127.0.0.1:8000"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "MkDocs: Build (RAG2F)",
      "type": "shell",
      "command": "./.venv/bin/python -m mkdocs build -f mkdocs.yml && cp llm/*.txt site/",
      "problemMatcher": []
    }
  ]
}
